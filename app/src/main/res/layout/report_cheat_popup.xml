<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="337dp"
            android:layout_height="353dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:id="@+id/cheatContrraint"
            android:background="@drawable/pop_up_background">

        <TextView
                android:text="Report Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.498"
                android:textSize="16sp"
                android:textColor="@color/dkt_red"
                android:textStyle="bold"/>
        <TextView
                android:text="Select a cheating-player from the list down below to report him as such. Act with caution."
                android:layout_width="289dp"
                android:layout_height="27dp"
                android:id="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                android:textColor="@color/button_gray"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="284dp"
                android:layout_height="223dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintBottom_toTopOf="@+id/btnSubmitCheater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/rececylerCheatPlayer"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintVertical_bias="0.565"/>
        <Button
                android:text="Report"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/btnSubmitCheater"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/host_btn_background"
                android:textColor="@color/dkt_yellow"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.852"/>
        <Button
                android:text="Cancel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/btnCancelCheater"
                app:layout_constraintEnd_toStartOf="@+id/btnSubmitCheater"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnSubmitCheater"
                app:layout_constraintBottom_toBottomOf="@+id/btnSubmitCheater"
                android:background="@drawable/host_btn_background"
                android:textColor="@color/dkt_yellow"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>