<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id ="@+id/winnerPopUpLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPopUp"
        android:layout_width="360dp"
        android:layout_height="380dp"
        android:background="@drawable/pop_up_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/popUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:text="@string/Congratulations"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/layoutPopUp" />

        <LinearLayout
            android:id="@+id/firstLinearLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/popUpTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/secondWinnerTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/SecondPlace"
                android:gravity="center" />

            <TextView
                android:id="@+id/firstWinnerTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/FirstPlace"
                android:gravity="center" />

            <TextView
                android:id="@+id/thirdWinnerTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/ThirdPlace"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLinearLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/firstLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/secondWealthTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Wealth"
                android:gravity="center" />

            <TextView
                android:id="@+id/firstWealthTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Wealth"
                android:gravity="center" />

            <TextView
                android:id="@+id/thirdWealthTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Wealth"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:id="@+id/winnerPodiumImage"
            android:contentDescription="@string/Congratulations"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/winner_podium_dkt"
            app:layout_constraintTop_toBottomOf="@id/secondLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/fourthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/winnerPodiumImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/fourthPlaceTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/FourthPlace"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/fourthWinnerTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="@string/FourthPlace"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/fourthWealthTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="@string/FourthPlace"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fourthLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/fifthPlaceTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/FifthPlace"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/fifthWinnerTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="@string/FifthPlace"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/fifthWealthTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="@string/FifthPlace"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fifthLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/sixthPlaceTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/SixthPlace"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/sixthWinnerTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="@string/SixthPlace"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/sixthWealthTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="@string/SixthPlace"
                android:gravity="center" />

        </LinearLayout>


        <Button
            android:id="@+id/okButtonWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/dkt_red"
            android:fontFamily="@font/bangers"
            android:text="@string/OK"
            android:textColor="@color/dkt_yellow"
            android:textSize="14sp"
            app:cornerRadius="12dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sixthLinearLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:contentDescription="@string/DktLogoDescription"
        android:id="@+id/dktLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dkt_logo_2"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutPopUp"
        app:layout_constraintBottom_toTopOf="@id/layoutPopUp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>