<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:id="@+id/userCardRelativeLayout"
    android:background="@drawable/user_card_background">

    <TextView
        android:id="@+id/userName_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/bangers"
        android:text="@string/UserName"
        android:textColor="@color/dkt_yellow"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/userRole"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/UserRole"
        android:textSize="25sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/joiningTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/userRole"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/JoiningTime"
         />

</RelativeLayout>
